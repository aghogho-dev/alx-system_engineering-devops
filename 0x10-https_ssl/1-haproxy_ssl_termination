global
    log     /dev/log local0
    maxconn 2048
    user    haproxy
    group   haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000
    option  forwardfor
    option  http-server-close

frontend www-http
    bind   *:80
    reqadd X-Forwarded-Proto:\ http
    default_backend www-backend
    redirect scheme https if !{ ssl_fc }

frontend www-https
    bind   *:443 ssl crt /etc/haproxy/certs/www.bigint.tech.pem
    reqadd X-Forwarded-Proto:\ https
    acl url_root path -i /
    http-request set-header Host bigint.tech
    http-request set-header X-Real-IP %[src]
    use_backend web_servers if url_root

backend www-backend
    balance  roundrobin
    redirect scheme https if !{ ssl_fc }
    server 119779-web-01 52.86.208.77:80 check
    server 119779-web-02 34.237.91.3:80 check

backend letsencrypt-backend
    server letsencrypt 127.0.0.1:54321
